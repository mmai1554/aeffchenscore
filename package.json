{
  "private": true,
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.0",
    "@tailwindcss/typography": "^0.5.0",
    "@wordpress/eslint-plugin": "^9.3.0",
    "@wordpress/stylelint-config": "^19.1.0",
    "archiver": "^5.3.0",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^14.0.2",
    "prettier": "^2.4.1",
    "tailwindcss": "^3.0.7"
  },
  "scripts": {
    "development:frontend": "npx tailwindcss --postcss -i ./tw/tailwind.css -c ./tw/tailwind.config.js -o ./style.css",
    "development:editor": "npx tailwindcss --postcss -i ./tw/tailwind.css -c ./tw/tailwind-editor.config.js -o ./style-editor_tw.css",
    "development": "run-p development:*",
    "dev": "npm run development",
    "watch:frontend": "npm run development:frontend -- --watch",
    "watch:editor": "npm run development:editor -- --watch",
    "watch": "run-p watch:*",
    "production:frontend": "cross-env NODE_ENV=production npm run development:frontend -- --minify",
    "production:editor": "cross-env NODE_ENV=production npm run development:editor -- --minify",
    "production": "run-p production:*",
    "prod": "npm run production",
    "zip": "node scripts/zip.js lq-mnc-theme",
    "bundle": "run-s production zip"
  }
}
