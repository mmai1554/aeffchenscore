.mnc-svg-spin {
	svg {
		animation: spin 2s linear infinite;
	}
}

.mnc-spin-hover:hover svg, svg.mnc-spin-hover:hover {
	animation: spin 2s linear infinite;
}

.mnc-underline-hover {
	a:hover {
		@apply underline;
	}
}


.mnc-svg-flip {
	svg {
		transform: rotateY(180deg);
	}
}

.mnc-imgscale-hover {
	figure {
		overflow: hidden;
	}

	img {
		transition: all ease-in-out 400ms;

		&:hover {
			transform: scale(1.2);
		}
	}
}

.mnc-object-cover {
	img {
		object-fit: fill;
		height:100%;
	}
}

.mnc-hover-anchor {
	a:hover {
		@apply underline;
	}
}

.mnc-highlight {
	background-color: yellow;
}
